rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      // Approach A: Custom Claims (Preferred)
      // return request.auth.token.admin == true;
      
      // Approach B: Firestore Role Doc (Fallback)
      return isSignedIn() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }

    // User Profiles
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) && 
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'personalPoints', 'teamId']));
      allow write: if isAdmin();
    }

    // Teams (Points and Metadata)
    match /teams/{teamId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Points Logs
    match /points_logs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Legacy Gamification (if still used)
    match /gamification/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Content
    match /content/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
