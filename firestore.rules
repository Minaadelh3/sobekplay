rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "ADMIN";
    }

    // --- Users Collection ---
    // Users can read/write their own basic data.
    // Admins can read/write all.
    // --- Users Collection ---
    // Users can read/write their own basic data.
    // Admins can read/write all.
    match /users/{userId} {
      allow read: if isAuthenticated(); // Allow reading other users (for team lists etc)
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow update if:
      // 1. User is Admin OR
      // 2. User is Owner AND only modifying allowed fields
      allow update: if isAuthenticated() && (
        isAdmin() || 
        (request.auth.uid == userId && 
         // Helper to check if only allowed fields are being modified
         // We allow updating: profile, preferences, notifications, privacy, mobile, name (legacy)
         // We DO NOT allow: role, points, teamId (unless admin), status
         (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'points', 'status', 'teamId', 'createdAt']))
        )
      );

      // Admin only delete
      allow delete: if isAdmin();

      // --- Device Tokens (Subcollection) ---
      // Users can manage their own device tokens
      match /devices/{token} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // --- Teams Collection ---
    // Everyone can READ teams (to see points)
    // ONLY Admins can WRITE teams (scoring, creating)
    match /teams/{teamId} {
      allow read: if true; // Public read for leaderboards/setup
      
      // Strict Admin-only mutations
      allow create, update, delete: if isAdmin();
      
      // Validation (Optional but good): 
      // Should enforce schema if we wanted to be very strict,
      // But 'isAdmin()' is sufficient for now given the trust model.
    }

    // --- Admin Logs ---
    match /admin_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin(); // Logs created by admin actions
    }
  }
}
